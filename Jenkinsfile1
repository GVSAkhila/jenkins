pipeline {
    agent {node {label 'AGENT-1'}}
    stages {
        stage('Build') { 
            steps {
                echo 'building'
                sh 'ls -ltr'
                sh 'pwd'
            }
        }
        stage('Test') { 
            steps {
                echo 'testing'
            }
        }
        stage('Deploy') { 
            steps {
                echo 'deploying the files'
            }
        }
    }
    post {
        always {
            echo 'i will always run weather it success or failure'
        }
        success {
            echo 'i will run only job is success'
        }
        failure {
            echo 'i will run only fail'
        }
    }
}