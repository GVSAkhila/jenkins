pipeline {
    agent {node {label 'AGENT-1'}}
    stages {
        stage('Build') { 
            steps {
                echo 'building'
            }
        }
        stage('Test') { 
            steps {
                echo 'testing'
            }
        }
        stage('Deploy') { 
            steps {
                echo 'deploying the files'
            }
        }
    }
    post{
        always {
            echo ' i will always run weather it sucess or failure'
        }
        sucess {
            echo 'i will run only job is sucess'
        }
        failure {
            echo 'i will run only fail'
        }
    }
}